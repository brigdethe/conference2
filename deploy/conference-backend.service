[Unit]
Description=Conference FastAPI Backend
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/var/www/conference2/backend
Environment="PATH=/var/www/conference2/backend/venv/bin"
ExecStart=/var/www/conference2/backend/venv/bin/uvicorn main:app --host 127.0.0.1 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
