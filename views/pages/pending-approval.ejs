<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/google-analytics') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Status - Ghana Competition Law Seminar</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-gradient-to-br from-amber-50 to-orange-50 min-h-screen">
    <div class="min-h-screen flex items-center justify-center p-4">
        <div class="bg-white rounded-3xl shadow-xl p-8 w-full max-w-md">
            <!-- Header -->
            <div class="text-center mb-6">
                <h1 class="text-2xl font-bold text-slate-800">Ghana Competition Law Seminar</h1>
                <p class="text-slate-500 text-sm mt-1">Registration Status</p>
            </div>

            <!-- Status Display -->
            <div id="statusContainer" class="mb-6">
                <div id="loadingState" class="text-center py-8">
                    <div class="animate-spin w-8 h-8 border-4 border-amber-500 border-t-transparent rounded-full mx-auto mb-3"></div>
                    <p class="text-slate-500">Checking registration status...</p>
                </div>

                <div id="pendingState" class="hidden">
                    <div class="bg-amber-50 border border-amber-200 rounded-2xl p-6 text-center mb-6">
                        <div class="text-4xl mb-3">‚è≥</div>
                        <h2 class="text-xl font-bold text-amber-700 mb-2">Pending Approval</h2>
                        <p class="text-amber-600 text-sm">Your registration is being reviewed by our team.</p>
                    </div>
                </div>

                <div id="approvedState" class="hidden">
                    <div class="bg-emerald-50 border border-emerald-200 rounded-2xl p-6 text-center mb-6">
                        <div class="text-4xl mb-3">‚úì</div>
                        <h2 class="text-xl font-bold text-emerald-700 mb-2">Approved!</h2>
                        <p class="text-emerald-600 text-sm">Your registration has been approved. Please complete payment.</p>
                    </div>
                    <a id="paymentLink" href="#" class="block w-full bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-3 px-6 rounded-xl text-center transition-colors mb-4">
                        Complete Payment
                    </a>
                </div>

                <div id="rejectedState" class="hidden">
                    <div class="bg-red-50 border border-red-200 rounded-2xl p-6 text-center mb-6">
                        <div class="text-4xl mb-3">‚úï</div>
                        <h2 class="text-xl font-bold text-red-700 mb-2">Not Approved</h2>
                        <p class="text-red-600 text-sm">Unfortunately, your registration was not approved.</p>
                    </div>
                </div>

                <div id="confirmedState" class="hidden">
                    <div class="bg-emerald-50 border border-emerald-200 rounded-2xl p-6 text-center mb-6">
                        <div class="text-4xl mb-3">üéâ</div>
                        <h2 class="text-xl font-bold text-emerald-700 mb-2">Confirmed!</h2>
                        <p class="text-emerald-600 text-sm">Your registration is confirmed. See you at the event!</p>
                    </div>
                </div>

                <div id="errorState" class="hidden">
                    <div class="bg-slate-50 border border-slate-200 rounded-2xl p-6 text-center mb-6">
                        <div class="text-4xl mb-3">‚ùì</div>
                        <h2 class="text-xl font-bold text-slate-700 mb-2">Registration Not Found</h2>
                        <p class="text-slate-600 text-sm">We couldn't find this registration.</p>
                    </div>
                </div>
            </div>

            <!-- Event Details -->
            <div class="bg-slate-50 rounded-2xl p-5 mb-6">
                <div class="flex items-start gap-3 mb-4">
                    <span class="text-xl">üìÖ</span>
                    <div>
                        <p class="font-semibold text-slate-800">Wednesday, 25 March 2026</p>
                        <p class="text-slate-500 text-sm">9:00 AM - 3:00 PM</p>
                    </div>
                </div>
                <div class="flex items-start gap-3">
                    <span class="text-xl">üìç</span>
                    <div>
                        <p class="font-semibold text-slate-800">M√∂venpick Ambassador Hotel</p>
                        <p class="text-slate-500 text-sm">Accra, Ghana</p>
                    </div>
                </div>
            </div>

            <!-- Countdown -->
            <div class="bg-gradient-to-r from-amber-600 to-orange-500 text-white rounded-2xl p-4 text-center mb-6">
                <p class="text-sm opacity-80 mb-1">Event starts in</p>
                <p id="countdown" class="text-2xl font-bold">-- days -- hours</p>
            </div>

            <!-- Add to Calendar -->
            <a href="https://calendar.google.com/calendar/render?action=TEMPLATE&text=Ghana%20Competition%20Law%20Seminar&dates=20260325T090000/20260325T150000&location=M%C3%B6venpick%20Ambassador%20Hotel%2C%20Accra%2C%20Ghana&details=Ghana%20Competition%20%26%20Policy%20Law%20Seminar%20-%20Laying%20a%20Sound%20Foundation%20for%20a%20New%20Era" 
               target="_blank" 
               class="flex items-center justify-center gap-2 w-full bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium py-3 px-6 rounded-xl transition-colors mb-4">
                <span>üìÜ</span> Add to Calendar
            </a>

            <!-- Back to Home -->
            <a href="/" class="block text-center text-slate-500 hover:text-slate-700 text-sm">
                ‚Üê Back to Home
            </a>
        </div>
    </div>

    <script>
        // Get registration ID from URL
        const urlParams = new URLSearchParams(window.location.search);
        const regId = urlParams.get('id');

        // Countdown timer
        function updateCountdown() {
            const eventDate = new Date('2026-03-25T09:00:00');
            const now = new Date();
            const diff = eventDate - now;
            
            if (diff <= 0) {
                document.getElementById('countdown').textContent = 'Event has started!';
                return;
            }
            
            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            document.getElementById('countdown').textContent = `${days} days ${hours} hours`;
        }
        updateCountdown();
        setInterval(updateCountdown, 60000);

        // Check registration status
        async function checkStatus() {
            if (!regId) {
                showState('error');
                return;
            }

            try {
                const response = await fetch(`/api/registration/${regId}/status`);
                if (!response.ok) {
                    showState('error');
                    return;
                }

                const data = await response.json();
                
                switch (data.status) {
                    case 'pending_approval':
                        showState('pending');
                        break;
                    case 'pending_payment':
                        showState('approved');
                        document.getElementById('paymentLink').href = `/payment?id=${regId}`;
                        break;
                    case 'rejected':
                        showState('rejected');
                        break;
                    case 'confirmed':
                        showState('confirmed');
                        break;
                    default:
                        showState('pending');
                }
            } catch (error) {
                console.error('Error checking status:', error);
                showState('error');
            }
        }

        function showState(state) {
            document.getElementById('loadingState').classList.add('hidden');
            document.getElementById('pendingState').classList.add('hidden');
            document.getElementById('approvedState').classList.add('hidden');
            document.getElementById('rejectedState').classList.add('hidden');
            document.getElementById('confirmedState').classList.add('hidden');
            document.getElementById('errorState').classList.add('hidden');

            document.getElementById(state + 'State').classList.remove('hidden');
        }

        checkStatus();
    </script>
</body>
</html>
