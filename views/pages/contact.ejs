                                var form = document.getElementById('registrationForm');
                                if (!form) return;

                                var codeInput = form.querySelector('input[name="accessCode"]');
                                var firmSelect = document.getElementById('lawFirmSelect');
                                var codeValidation = document.getElementById('codeValidation');
                                var companyWrapper = document.getElementById('companyWrapper');
                                var lawFirmWrapper = document.getElementById('lawFirmWrapper');
                                var companyInput = document.getElementById('companyInput');
                                if (!codeInput || !firmSelect) return;

                                // Populate law firm dropdown from database
                                if (firms && firms.length > 0) {
                                    firms.forEach(function(firm) {
                                        var option = document.createElement('option');
                                        option.value = firm.name;
                                        option.textContent = firm.name;
                                        option.setAttribute('data-code', firm.code);
                                        firmSelect.appendChild(option);
                                    });
                                }

                                function selectFirm(name) {
                                    var option = Array.from(firmSelect.options).find(function (opt) {
                                        return opt.value === name;
                                    });

                                    if (!option) {
                                        option = document.createElement('option');
                                        option.value = name;
                                        option.textContent = name;
                                        option.setAttribute('data-generated', 'true');
                                        firmSelect.appendChild(option);
                                    }

                                    firmSelect.value = name;
                                }

                                function showValidation(message, isValid, firmName) {
                                    if (!codeValidation) return;
                                    if (!message) {
                                        codeValidation.innerHTML = '';
                                        // No code - show company field, hide law firm
                                        if (companyWrapper) companyWrapper.style.display = 'block';
                                        if (lawFirmWrapper) lawFirmWrapper.style.display = 'none';
                                        if (companyInput) companyInput.required = true;
                                        if (firmSelect) firmSelect.required = false;
                                        return;
                                    }
                                    var color = isValid ? '#16a34a' : '#dc2626';
                                    var icon = isValid ? '&#10003;' : '&#10007;';
                                    var firmText = firmName ? '<strong>' + firmName + '</strong>' : '';
                                    codeValidation.innerHTML = '<span style="color: ' + color + ';">' + icon + ' ' + message + '</span> ' + firmText;
                                    
                                    // Toggle fields based on validity
                                    if (isValid) {
                                        // Valid code - hide company, show law firm (auto-selected)
                                        if (companyWrapper) companyWrapper.style.display = 'none';
                                        if (lawFirmWrapper) lawFirmWrapper.style.display = 'block';
                                        if (companyInput) companyInput.required = false;
                                        if (firmSelect) firmSelect.required = true;
                                    } else {
                                        // Invalid code - show company field
                                        if (companyWrapper) companyWrapper.style.display = 'block';
                                        if (lawFirmWrapper) lawFirmWrapper.style.display = 'none';
                                        if (companyInput) companyInput.required = true;
                                        if (firmSelect) firmSelect.required = false;
                                    }
                                }

                                function syncLawFirmFromCode(rawCode) {
                                    var code = String(rawCode || '').trim().toUpperCase();
                                    
                                    if (!code) {
                                        showValidation('', false);
                                        return;
                                    }

                                    if (code.length < 6) {
                                        showValidation('Enter 6-character code', false);
                                        return;
                                    }

                                    var firm = firms.find(function (item) {
                                        return String(item.code || '').trim().toUpperCase() === code;
                                    });

                                    if (firm && firm.name) {
                                        selectFirm(firm.name);
                                        var slotsText = firm.free_slots_remaining > 0 
                                            ? '(' + firm.free_slots_remaining + ' free slots remaining)' 
                                            : '(Payment required)';
                                        showValidation('Valid code - ' + slotsText, true, firm.name);
                                    } else {
                                        showValidation('Invalid access code', false);
                                    }
                                }

                                codeInput.addEventListener('input', function (event) {
                                    var normalizedCode = String(event.target.value || '').toUpperCase();
                                    if (event.target.value !== normalizedCode) {
                                        event.target.value = normalizedCode;
                                    }
                                    syncLawFirmFromCode(normalizedCode);
                                });

                                syncLawFirmFromCode(codeInput.value);
                            });
                        })();
