        function showTicketsCodeValidation(message, isValid, firmName, hasFreeSlots) {
            var ticketsReasonWrapper = document.getElementById('ticketsReasonWrapper');
            var ticketsReasonInput = document.getElementById('ticketsReasonInput');
            
            if (!ticketsCodeValidation) return;
            if (!message) {
                ticketsCodeValidation.innerHTML = '';
                // No code - show company field, hide law firm, show reason field
                if (ticketsCompanyWrapper) ticketsCompanyWrapper.style.display = 'block';
                if (ticketsLawFirmWrapper) ticketsLawFirmWrapper.style.display = 'none';
                if (ticketsCompanyInput) ticketsCompanyInput.required = true;
                if (ticketsLawFirm) ticketsLawFirm.required = false;
                // Show reason field when no code (needs approval)
                if (ticketsReasonWrapper) ticketsReasonWrapper.style.display = 'block';
                if (ticketsReasonInput) ticketsReasonInput.required = true;
                return;
            }
            var color = isValid ? '#16a34a' : '#dc2626';
            var icon = isValid ? '&#10003;' : '&#10007;';
            var firmText = firmName ? '<strong>' + firmName + '</strong>' : '';
            ticketsCodeValidation.innerHTML = '<span style="color: ' + color + ';">' + icon + ' ' + message + '</span> ' + firmText;
            
            // Toggle fields based on validity
            if (isValid && hasFreeSlots) {
                // Valid code with free slots - hide company, show law firm, hide reason
                if (ticketsCompanyWrapper) ticketsCompanyWrapper.style.display = 'none';
                if (ticketsLawFirmWrapper) ticketsLawFirmWrapper.style.display = 'block';
                if (ticketsCompanyInput) ticketsCompanyInput.required = false;
                if (ticketsLawFirm) ticketsLawFirm.required = true;
                // Hide reason field - will be auto-confirmed
                if (ticketsReasonWrapper) ticketsReasonWrapper.style.display = 'none';
                if (ticketsReasonInput) ticketsReasonInput.required = false;
            } else if (isValid && !hasFreeSlots) {
                // Valid code but no free slots - needs approval
