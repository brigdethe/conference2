<script>
    // Footer inquiry tabs functionality
    (function() {
        var tabs = document.querySelectorAll('.footer_inquiry-tab');
        var hiddenInput = document.getElementById('inquiryTypeHidden');
        var messageTextarea = document.getElementById('messageTextarea');
        var submitBtn = document.getElementById('footerSubmitBtn');
        var titleEl = document.querySelector('.footer_inquiry-title');
        
        if (!tabs.length) return;
        
        tabs.forEach(function(tab) {
            tab.addEventListener('click', function() {
                tabs.forEach(function(t) { t.classList.remove('active'); });
                tab.classList.add('active');
                
                var tabType = tab.getAttribute('data-tab');
                if (tabType === 'question') {
                    hiddenInput.value = 'Seminar Question';
                    messageTextarea.placeholder = 'What question would you like addressed at the seminar?';
                    submitBtn.textContent = 'Submit Question';
                    if (titleEl) titleEl.textContent = 'Submit Your Question';
                } else {
                    hiddenInput.value = 'General Inquiry';
                    messageTextarea.placeholder = 'How can we help you?';
                    submitBtn.textContent = 'Submit Inquiry';
                    if (titleEl) titleEl.textContent = 'Send an Inquiry';
                }
            });
